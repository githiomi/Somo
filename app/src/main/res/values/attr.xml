<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- The styleables -->
    <declare-styleable name="styleableAttributes">
        <!-- Universals -->
        <attr name="universalBackground" format="color" />
        <attr name="profileIcons" format="color" />
        <attr name="navigationBackground" format="color" />
        <attr name="navigationHeaderBackground" format="color" />


        <!-- Main Activity -->
        <attr name="mainActivityBackground" format="color" />
        <attr name="mainActivityText" format="color" />
        <attr name="mainActivityProgressBar" format="color" />

        <!-- Login Activity -->
        <attr name="loginBackground" format="color" />
        <attr name="loginActivityText" format="color" />
        <attr name="textInputFieldBackground" format="color" />
        <attr name="textInputFieldHint" format="color" />
        <attr name="textInputFieldHintAfter" format="color" />
        <attr name="textInputFieldText" format="color" />
        <attr name="loginButtonBackground" format="color" />
        <attr name="loginButtonText" format="color" />
        <attr name="loginProgressBar" format="color" />

        <!-- Sign up Activity -->
        <attr name="signUpBackground" format="color" />
        <attr name="signUpActivityText" format="color" />
        <attr name="signUpButtonBackground" format="color" />
        <attr name="signUpButtonText" format="color" />
        <attr name="signUpProgressBar" format="color" />

        <!-- Search Activity -->
        <attr name="searchActivityText" format="color" />
        <attr name="searchButtonBackground" format="color" />
        <attr name="searchButtonText" format="color" />

        <!-- Recent Search Activity -->
        <attr name="recentSearchDrawable" format="color" />
        <attr name="recentSearchText" format="color" />
        <attr name="recentSearchItemText" format="color" />

        <!-- Result Activity -->
        <attr name="productNameText" format="color" />
        <attr name="productPriceText" format="color" />
        <attr name="productCurrencyText" format="color" />
        <attr name="productRatingText" format="color" />

        <!-- Detail Fragment -->
        <attr name="productDetailNameText" format="color" />
        <attr name="productDetailsText" format="color" />
        <attr name="productDetailCurrencyText" format="color" />
        <attr name="productDetailRatingText" format="color" />

        <!-- Profile Activity & Fragments -->
        <attr name="profileAttributeHeaderBackground" format="color" />
        <attr name="profileAttributeHeaderText" format="color" />
        <attr name="profileAttributeBodyText" format="color" />
        <attr name="editButtonTextColor" format="color" />

        <!-- App Activity & Fragments -->
        <attr name="settingsBodyText" format="color" />
        <attr name="policyBodyText" format="color" />

        <!-- Dark Toolbar -->
        <attr name="darkToolbarBackground" format="color" />
        <attr name="darkToolbarIconTint" format="color" />
        <attr name="darkToolbarTextColor" format="color" />

        <!-- Light Toolbar -->
        <attr name="lightToolbarBackground" format="color" />
        <attr name="lightToolbarIconTint" format="color" />
        <attr name="lightToolbarTextColor" format="color" />

        <!-- Result Toolbar -->
        <attr name="resultToolbarBackground" format="color" />
        <attr name="resultToolbarText" format="color" />
        <attr name="resultToolbarIconTint" format="color" />

    </declare-styleable>

</resources>