<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Somo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Main_No_Action_Bar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Universals -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="universalBackground">@color/colorBackground</item>
        <item name="navigationBackground">@color/white</item>
        <item name="navigationHeaderBackground">@color/colorPrimary</item>
        <item name="textInputFieldBackground">@color/white</item>
        <item name="textInputFieldText">@color/black</item>
        <item name="loginButtonBackground">@color/black</item>
        <item name="textInputFieldHint">@color/colorPrimary</item>
        <item name="textInputFieldHintAfter">@color/colorPrimary</item>
        <!-- Login Activity -->
        <item name="loginBackground">@color/colorBackground</item>
        <item name="loginActivityText">@color/black</item>
        <item name="loginButtonText">@color/white</item>
        <item name="loginProgressBar">@color/black</item>
        <!-- Sign Up Activity -->
        <item name="signUpBackground">@color/colorBackground</item>
        <item name="signUpActivityText">@color/black</item>
        <item name="signUpButtonBackground">@color/black</item>
        <item name="signUpButtonText">@color/white</item>
        <item name="signUpProgressBar">@color/black</item>
        <!-- Search Activity -->
        <item name="searchActivityText">@color/black</item>
        <item name="searchButtonBackground">@color/colorPrimary</item>
        <item name="searchButtonText">@color/white</item>
        <!-- Recent Search Activity -->
        <item name="recentSearchDrawable">@color/black</item>
        <item name="recentSearchText">@color/black</item>
        <item name="recentSearchItemText">@color/colorPrimary</item>
        <!-- Result Activity -->
        <item name="productNameText">@color/colorPrimary</item>
        <item name="productPriceText">@color/black</item>
        <item name="productCurrencyText">@color/darkGrey</item>
        <item name="productRatingText">@color/darkGrey</item>
        <!-- Detail Fragment -->
        <item name="productDetailNameText">@color/colorPrimary</item>
        <item name="productDetailRatingText">@color/black</item>
        <item name="productDetailsText">@color/black</item>
        <!-- Profile Activity & Fragments-->
        <item name="profileIcons">@color/colorPrimary</item>
        <item name="profileAttributeHeaderBackground">@color/white</item>
        <item name="profileAttributeHeaderText">@color/colorPrimary</item>
        <item name="profileAttributeBodyText">@color/black</item>
        <item name="editButtonTextColor">@color/black</item>
        <!-- App Activity & Fragments -->
        <item name="settingsBodyText">@color/black</item>
        <item name="policyBodyText">@color/black</item>
        <!-- Dark Toolbar -->
        <item name="darkToolbarBackground">@color/black</item>
        <item name="darkToolbarTextColor">@color/white</item>
        <item name="darkToolbarIconTint">@color/white</item>
        <!-- Light Toolbar -->
        <item name="lightToolbarBackground">@color/transparent</item>
        <item name="lightToolbarTextColor">@color/black</item>
        <item name="lightToolbarIconTint">@color/colorPrimary</item>
        <!-- Result Toolbar -->
        <item name="resultToolbarBackground">@color/transparent</item>
        <item name="resultToolbarIconTint">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Window Animation -->
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="sideNavigationTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/black</item>
    </style>
</resources>